{
  "name": "ems-be",
  "scripts": {
    "lint": "eslint --ext js,ts src --cache --report-unused-disable-directives --max-warnings=0",
    "lint:fix": "eslint --ext js,ts src --cache --report-unused-disable-directives --max-warnings=0 --fix",
    "format": "prettier --write . --config ./.prettierrc",
    "build": "tsc",
    "start": "node -r ts-node/register -r tsconfig-paths/register dist/index.js",
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn src/index.ts",
    "prepare": "husky install",
    "codegen": "graphql-codegen --config codegen.yml"
  },
  "dependencies": {
    "@graphql-tools/schema": "^8.3.2",
    "@sendgrid/mail": "^7.6.1",
    "apollo-server-express": "^3.6.3",
    "aws-sdk": "^2.1094.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "glob": "^7.2.0",
    "graphql": "^16.3.0",
    "graphql-constraint-directive": "^3.0.0",
    "graphql-upload": "^13.0.0",
    "ioredis": "^4.28.5",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.2.4",
    "sharp": "^0.30.3",
    "typescript": "^4.6.2",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.6.2",
    "@graphql-codegen/typescript": "2.4.8",
    "@graphql-codegen/typescript-resolvers": "2.6.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.13",
    "@types/glob": "^7.2.0",
    "@types/graphql-upload": "^8.0.11",
    "@types/ioredis": "^4.28.8",
    "@types/node": "^17.0.21",
    "@types/sharp": "^0.30.0",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "prettier": "^2.5.1",
    "ts-node": "^10.7.0",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.14.1",
    "husky": "^7.0.0"
  }
}
